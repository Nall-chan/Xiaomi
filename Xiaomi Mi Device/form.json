{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "CheckBox",
                    "name": "Open",
                    "caption": "Open",
                    "width": "200px"
                },
                {
                    "name": "Host",
                    "type": "ValidationTextBox",
                    "validate": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))$|^$",
                    "caption": "Host",
                    "width": "200px"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ColumnLayout",
                    "items": [
                        {
                            "name": "DeviceId",
                            "type": "ValidationTextBox",
                            "caption": "Device ID",
                            "width": "200px"
                        },
                        {
                            "name": "RefreshInterval",
                            "type": "NumberSpinner",
                            "caption": "Refresh Interval",
                            "suffix": "seconds",
                            "minimum": 0,
                            "width": "200px"
                        }
                    ]
                },
                {
                    "type": "ColumnLayout",
                    "items": [
                        {
                            "type": "CheckBox",
                            "name": "ForceCloud",
                            "caption": "Force cloud connection",
                            "onChange": "IPS_RequestAction($id,'ForceCloud',$ForceCloud);",
                            "width": "250px"
                        },
                        {
                            "type": "CheckBox",
                            "name": "DeniedCloud",
                            "caption": "Denied cloud connection",
                            "onChange": "IPS_RequestAction($id,'DeniedCloud',$DeniedCloud);",
                            "width": "250px"
                        }
                    ]
                },
                {
                    "type": "Image",
                    "image": ""
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ColumnLayout",
                    "items": [
                        {
                            "onClick": "XIAOMI_RequestState($id);",
                            "type": "Button",
                            "caption": "Request state"
                        },
                        {
                            "onClick": "IPS_RequestAction($id, 'ForceReloadModel', true);",
                            "type": "Button",
                            "caption": "Reload Devicedata"
                        }
                    ]
                },
                {
                    "type": "ExpansionPanel",
                    "name": "DeviceInfo",
                    "expanded": true,
                    "caption": "Device information",
                    "items": []
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "name": "TestCenter",
            "expanded": true,
            "caption": "TestCenter",
            "items": [
                {
                    "type": "TestCenter"
                }
            ]
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "error",
            "caption": "Device ID is missing"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "Cloud not get token from cloud. Device online?"
        },
        {
            "code": 203,
            "icon": "error",
            "caption": "API error, check log file for more information"
        },
        {
            "code": 204,
            "icon": "error",
            "caption": "Error load device specs from cloud."
        },
        {
            "code": 205,
            "icon": "error",
            "caption": "Device response with wrong ID."
        },
        {
            "code": 206,
            "icon": "error",
            "caption": "Timeout or socket error, Device offline?"
        }
    ]
}