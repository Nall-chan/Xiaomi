{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "CheckBox",
                    "name": "Open",
                    "caption": "Open"
                },
                {
                    "name": "Host",
                    "type": "ValidationTextBox",
                    "validate": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))$|^$",
                    "caption": "Host"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ColumnLayout",
                    "items": [
                        {
                            "name": "DeviceId",
                            "type": "ValidationTextBox",
                            "caption": "Device ID"
                        },
                        {
                            "name": "RefreshInterval",
                            "type": "NumberSpinner",
                            "caption": "Refresh Interval",
                            "suffix": "seconds",
                            "minimum": 0
                        }
                    ]
                },
                {
                    "type": "Image",
                    "image": ""
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ColumnLayout",
                    "items": [
                        {
                            "onClick": "XIAOMI_RequestState($id);",
                            "type": "Button",
                            "caption": "Request state"
                        },
                        {
                            "onClick": "IPS_RequestAction($id, 'ForceReloadModel', true);",
                            "type": "Button",
                            "caption": "Reload Devicedata"
                        }
                    ]
                },
                {
                    "type": "ExpansionPanel",
                    "name": "DeviceInfo",
                    "expanded": true,
                    "caption": "Device information",
                    "items": []
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "name": "TestCenter",
            "expanded": true,
            "caption": "TestCenter",
            "items": [
                {
                    "type": "TestCenter"
                }
            ]
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "error",
            "caption": "model or token is missing"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "Error in handshake. Device offline?"
        },
        {
            "code": 203,
            "icon": "error",
            "caption": "Devicemodel unknown"
        }
    ]
}