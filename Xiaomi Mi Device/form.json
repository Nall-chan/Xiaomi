{
    "elements": [
        {
            "name": "Host",
            "type": "ValidationTextBox",
            "validate": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))$|^$",
            "caption": "Host"
        },
        {
            "name": "RefreshInterval",
            "type": "NumberSpinner",
            "caption": "Refresh Interval",
            "suffix": "seconds",
            "minimum": 0
        }
    ],
    "actions": [
        {
            "onClick": "XIAOMI_RequestState($id);",
            "type": "Button",
            "caption": "Request state"
        },
        {
            "onClick": "IPS_RequestAction($id, 'ForceReloadModel', true);",
            "type": "Button",
            "caption": "Reload Devicedata"
        },
        {
            "type": "TestCenter"
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "error",
            "caption": "model or token is missing"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "Error in handshake. Device offline?"
        },
        {
            "code": 203,
            "icon": "error",
            "caption": "Devicemodel unknown"
        }
    ]
}